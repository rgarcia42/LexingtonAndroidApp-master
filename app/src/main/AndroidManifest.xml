<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capstone.Lexington" >

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.autofocus" />
    <uses-sdk android:minSdkVersion="14"
              android:targetSdkVersion="14"/>

    <application
        android:allowBackup="true"
        android:configChanges="orientation"        
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.capstone.Lexington.SplashScreen"
            android:label="Lexington"
            android:screenOrientation="portrait"
            android:theme="@style/Fullscreen" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.capstone.Lexington.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

         <activity
            android:name="com.capstone.Lexington.ScanActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/scan_title"
            android:screenOrientation="portrait"
            android:theme="@style/Fullscreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.Lexington.MainActivity" />
        </activity>
         <activity
            android:name="com.capstone.Lexington.MapActivity"
            android:label="@string/title_activity_map"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.Lexington.MainActivity" />
        </activity>
        <activity
            android:name="com.capstone.Lexington.TutorialActivity"
            android:label="@string/title_activity_help"
            android:screenOrientation="portrait" 
            android:theme="@style/NoAction">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.Lexington.MainActivity" />
        </activity>
        <activity
            android:name="com.capstone.Lexington.AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.Lexington.MainActivity" />
        </activity>
        <activity
            android:name="com.capstone.Lexington.TextRowActivity"
            android:label="@string/text_row_activity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.Lexington.MainActivity" />
        </activity>
         <activity
            android:name="com.capstone.Lexington.AudioVideoActivity"
            android:label="@string/audio_video_activity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.Lexington.MainActivity" />
        </activity>
        <activity
            android:name="com.capstone.Lexington.IndivImageActivity"
            android:label="@string/image_activity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.Lexington.MainActivity" />
        </activity>
        <activity
            android:name="com.capstone.Lexington.ImageZoomActivity"
            android:label="@string/image_zoom_activity">
           
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.Lexington.MainActivity" />
        </activity>
    </application>

</manifest>